<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameCeasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameCaesar"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="100dp"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/editKey"
        android:layout_below="@id/nameCeasar"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите числовой ключ"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_below="@id/editKey"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Введите текст, который нужно заифровать"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/editTextCeasar"
        android:layout_below="@id/editText"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Зашифрованный текст"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_below="@id/editTextCeasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cipher"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:onClick="buttonCeasar"
        />

</LinearLayout>