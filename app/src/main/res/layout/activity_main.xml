<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/nameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameListString"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/caesar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameList"
        android:text="@string/nameCaesar"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="buttonCeasar"/>


    <Button
        android:id="@+id/gronfeld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caesar"
        android:text="@string/Gronsveld"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="buttonGronsfeld"/>


</RelativeLayout>